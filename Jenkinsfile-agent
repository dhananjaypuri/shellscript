pipeline {

    agent {
        docker {
            image 'dhananjaypuri/mvn-git-jenkins-agent:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {

        stage('Code Checkout'){

            steps {
                echo "Code Checkout Stage"
                sh 'ls'
            }
        }
        stage('Build'){

            steps {
                echo "Code Build Stage"
                sh 'mvn --version'
            }
        }
        stage('Code Push'){

            steps {
                echo "Code Push Stage"
                sh 'git --version'
            }
        }

    }

}
